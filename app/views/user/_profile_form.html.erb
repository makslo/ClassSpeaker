<%=form_for @profile, :html=>{:class=>"form-horizontal"} do |b|%>

<%if @profile.errors.messages.any?%>
<%@profile.errors.messages.each do |k,v|%>
<div style="color:red;">
<%=k%>: <%=v[0]%>
</div>
<%end%>
<%end%>
		<div class="control-group">
		<%= b.label :career, "My primary career role", :class=>"control-label" %>
		  	<div class="controls">
		   <%= b.text_field :career%></div>
		</div>
		<div class="control-group">
		<%= b.label :years, "Years of experience", :class=>"control-label" %>
		  	<div class="controls">
		   <%= b.text_field :years, :placeholder=>"Years of experience" %></div>
		</div>
		<div class="control-group">
		<%= b.label :location, "My location", :class=>"control-label" %>
		  	<div class="controls">
		   <%= b.text_field :location, :placeholder=>"Location" %></div>
		</div>
		<div class="control-group">
		<%= b.label :bio, "What are your main activities on the job:", :class=>"control-label" %>
		  	<div class="controls">
		   <%= b.text_area :bio, :placeholder=>"project management, Excel spreadsheets, negotiation with investors, writing good emails, etc.", :rows=>'3' %></div>
		</div>
		<div class="control-group">
		<%= b.label :elementary, "I would like to speak to:", :class=>"control-label" %>
		  	<div class="controls">
		  		<table>
		  			<tr><td><%= b.check_box :elementary %></td><td style="padding-top:5px;">Elementary School</td>
	  				<td><%= b.check_box :middle %></td><td style="padding-top:5px;">Middle School</td></tr>
	  				<tr><td><%= b.check_box :high %></td><td style="padding-top:5px;">High School</td>
	  				<td><%= b.check_box :college %></td><td style="padding-top:5px;">College & University</td></tr>
		  		</table>
			</div>
		</div>
		<div class="control-group">
		<%= b.label :in_person, "Iâ€™d prefer speaking:", :class=>"control-label" %>
		  	<div class="controls">
		  		<table>
		  			<tr><td><%= b.check_box :in_person %></td><td style="padding-top:5px;">In person</td>
	  				<td><%= b.check_box :skype %></td><td style="padding-top:5px;">Via Skype</td></tr>
		  		</table>
			</div>
		</div>
		  	<div class="controls">
		  		<%= b.submit nil, :class=>"btn btn-large btn-primary" %>
			</div>
		</div>
		<%end%>