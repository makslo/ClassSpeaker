  <div id="content" class="">
    <div class="container">
      <div class="row">
      	<div class="span12">
      		<%if @profile.new_record?%>
      			<h2>Welcome,</h2>
      			<p>Please answer some questions to help teachers find you</p>
      			<%=render 'user/profile_form'%>
      		<%else%>
      			<% if !flash[:success].nil?%>
            <script>
            $(document).ready(function(){
              $('.thanks-message').click();
            });
            </script>
      		<%end%>
          <%=render 'user/info',:speaker=>@user%>
      		<%end%>
        </div>
      </div>
    </div>
  </div>

