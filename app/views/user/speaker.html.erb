  <div id="content" class="">
    <div class="container">
      <div class="row">
      	<div class="span12">
      		<%if @profile.new_record?%>
      			<h2>Welcome,</h2>
      			<p>Please answer some questions to help teachers find you</p>
      			<%=render 'user/profile_form'%>
      		<%else%>
      			<% if !flash[:success].nil?%>
      			<div class='alert alert-success'>
      				<button type="button" class="close" data-dismiss="alert">&times;</button>
      				<%=flash[:success]%>
      			</div>
      			<%end%>
      			<%=link_to "edit profile", edit_profile_url, :class=>"btn pull-right"%>
      		<%end%>
        </div>
      </div>
    </div>
  </div>

