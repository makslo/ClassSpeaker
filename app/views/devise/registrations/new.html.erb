  <div id="content" class="">


  	     <div id="landing" style="margin-top: -30px;">
          <div class="container">
            <div class="row">
              <div class="span10">
                <h1>Sign up</h1>
                <p>Tell us a bit about yourself to help us suggest the right speakers</p>
              </div>
            </div>
          </div>
        </div>

    <div class="container">
      <div class="row">
      	<div class="span12">
      		<br>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class=>"form-horizontal"}) do |f| %>

		  <%= devise_error_messages! %>
		<div class="control-group">
		<%= f.label :teacher, "I'm a teacher at:",:class=>"control-label" %>
		  	<div class="controls">
		   <%= f.select :teacher, User.get_teachers%></div>
		</div>
		<div class="control-group">
		<%= f.label :first_name, :class=>"control-label" %>
		  	<div class="controls">
		   <%= f.text_field :first_name, :placeholder=>"First name"%></div>
		</div>
		<div class="control-group">
		<%= f.label :last_name, :class=>"control-label" %>
		  	<div class="controls">
		   <%= f.text_field :last_name, :placeholder=>"Last name"%></div>
		</div>
		<div class="control-group">
		<%= f.label :email, :class=>"control-label" %>
		  	<div class="controls">
		   <%= f.email_field :email, :placeholder=>"Your Email"%></div>
		</div>
		<div class="control-group">
		<%= f.label :password, :class=>"control-label" %>
		  	<div class="controls">
		   <%= f.password_field :password, :autocomplete => "off", :password=>"Password", :placeholder=>"Password" %></div>
		</div>
		<div class="control-group">
		<%= f.label :password_confirmation, :class=>"control-label" %>
		  	<div class="controls">
		   <%= f.password_field :password_confirmation, :placeholder=>"Confirm" %></div>
		</div>
		<div class="control-group">
		  	<div class="controls">
		  <div><%= f.submit "Sign up", :class=>"btn btn-large btn-primary" %></div>
		  <br>
		  <%= render "devise/shared/links" %>
		</div>
		</div>
<% end %>

        </div>
      </div>
    </div>
  </div>
