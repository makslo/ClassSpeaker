
	<div id="content" class="">
	  <div class="container">
	    <div class="row">
		  <div class="span12">
<h2>Sign up</h2>
<br>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class=>"form-horizontal"}) do |f| %>

<div class="row">

	<div class="span8">
		  <%= devise_error_messages! %>
		<div class="control-group">
		<%= f.label :email, :class=>"control-label" %>
		  	<div class="controls">
		   <%= f.email_field :email, :placeholder=>"Your Email"%></div>
		</div>
		<div class="control-group">
		<%= f.label :password, :class=>"control-label" %>
		  	<div class="controls">
		   <%= f.password_field :password, :autocomplete => "off", :password=>"Password", :placeholder=>"Password" %></div>
		</div>
		<div class="control-group">
		<%= f.label :password_confirmation, :class=>"control-label" %>
		  	<div class="controls">
		   <%= f.password_field :password_confirmation, :placeholder=>"Confirm" %></div>
		</div>
		<div class="control-group">
		  	<div class="controls">
		  <div><%= f.submit "Sign up", :class=>"btn btn-large btn-primary" %></div>
		  <br>
		  <%= render "devise/shared/links" %>
		</div>
		</div>
	</div>
</div>


			</div>
		</div>
		<% end %>
	</div>
</div>
